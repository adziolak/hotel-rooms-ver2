{
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "isolatedModules": true,
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "resolveJsonModule": true,
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": ".",
      "noEmit": true,
      "paths": {
        "~/*": ["./app/*"]
      },
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "target": "ES2019"
    }    
}